<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/image3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backgtound_round_up"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="30sp"
                    android:layout_marginEnd="20sp"
                    android:text="@string/enter_mobile_no_txt"
                    android:textColor="@color/blakish"
                    android:textSize="20sp"
                    >

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="@drawable/underline_grey"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="5">


                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom">

                        <LinearLayout
                            android:id="@+id/countrySpinnerSignIn"
                            android:layout_width="@dimen/_75sdp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/countryCodeTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:drawableEnd="@drawable/dropdown_arrow"
                                android:gravity="center"
                                android:hint="@string/_91"
                                android:maxLines="1"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/_12ssp" />


                        </LinearLayout>

                    </FrameLayout>


                    <EditText
                        android:id="@+id/mobilesignupb"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_weight="4"
                        android:background="@android:color/white"
                        android:gravity="center_vertical"
                        android:hint="980000000"
                        android:inputType="phone" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="25sp"
                    android:layout_marginEnd="20sp"
                    android:layout_marginBottom="20sp"
                    android:text="@string/submitting_txt"
                    android:textColor="@color/darkgrey"
                    android:textSize="15dp">

                </TextView>

                <Button
                    android:id="@+id/continuesighupb"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_45dp"
                    android:layout_gravity="bottom"
                    android:layout_margin="@dimen/margin_15dp"
                    android:background="@drawable/gradient_btn"
                    android:fontFamily="@font/lato_medium"
                    android:text="@string/accept_continue"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_18sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/lato_regular"
                    android:text="@string/or"
                    android:textSize="@dimen/_14ssp" />


                <Button
                    android:textAllCaps="false"
                    android:id="@+id/sent_otp_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_45dp"
                    android:layout_margin="@dimen/margin_15dp"
                    android:background="@drawable/btn_gradient_with_border"
                    android:fontFamily="@font/lato_medium"
                    android:text="@string/send_otp_email"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_18sp" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</layout>