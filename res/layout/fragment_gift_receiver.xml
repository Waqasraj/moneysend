<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:background="@color/colorYellow"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/img_back"
            android:layout_height="20dp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="25dp"
            app:srcCompat="@drawable/back_white_icon" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_width="wrap_content"
            android:text="E Gift"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
             />


        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_130sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="@dimen/_130sdp"
            android:src="@drawable/egift_image" />


        <TextView
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:text="Receiver Name"
            android:textSize="@dimen/_12ssp" />

        <LinearLayout
            android:background="@drawable/round_bg_yelloe1"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_width="match_parent">

            <EditText
                android:background="@null"
                android:hint="Anubhav"
                android:layout_height="@dimen/_40sdp"
                android:layout_width="match_parent"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/black" />
        </LinearLayout>


        <TextView
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:text="Receiver Mobile Number"
            android:textSize="@dimen/_12ssp" />

        <LinearLayout
            android:layout_height="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="5">

            <FrameLayout
                android:background="@drawable/round_bg_yelloe1"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:layout_width="0dp"
                android:minHeight="@dimen/_40sdp">

                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/countrySpinnerSignIn"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="@dimen/_75sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="center"
                        android:id="@+id/countryCodeTextView"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:maxLines="1"
                        android:text="@string/_91"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12ssp" />

                    <ImageView
                        android:contentDescription="TODO"
                        android:id="@+id/countryCodeImageView"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/_19sdp"
                        android:layout_marginStart="@dimen/_1sdp"
                        android:layout_width="@dimen/_25sdp" />

                    <ImageView
                        android:contentDescription="TODO"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_1sdp"
                        android:layout_width="wrap_content"
                        android:src="@drawable/dropdown_arrow" />
                </LinearLayout>

            </FrameLayout>

            <EditText
                android:background="@drawable/round_bg_yelloe1"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_weight="3.4"
                android:layout_width="0dp"
                android:minHeight="@dimen/_40sdp"
                android:padding="@dimen/_5sdp"
                android:text="9827543210" />
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/proced_gift_pay"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:minHeight="@dimen/_40sdp"
            app:cardCornerRadius="@dimen/_10sdp">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"

                android:layout_width="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Next"
                    android:textColor="@android:color/holo_orange_light" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>