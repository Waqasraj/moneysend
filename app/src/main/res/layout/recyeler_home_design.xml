<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/view_account"
        android:layout_width="@dimen/home_account_design_width"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_15dp"
        android:background="@drawable/user_accounts_box_shadow">


        <RelativeLayout
            android:id="@+id/balance_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_account_card_height_157"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/margin_20dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/currencyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_10dp"
                    android:layout_toStartOf="@id/image"
                    android:fontFamily="@font/montserrat_semibold"
                    android:letterSpacing="-0.05"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_14sp" />

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/balance"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/balance_text"
                android:textColor="@color/colorGrayTwo"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/margin_5dp"
                android:layout_toStartOf="@id/dummy_image"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_26sp" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/dummy_image"
                android:layout_width="@dimen/flag_size_33dp"
                android:layout_height="@dimen/flag_size_33dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_united_kingdom" />


        </RelativeLayout>


    </LinearLayout>
</layout>