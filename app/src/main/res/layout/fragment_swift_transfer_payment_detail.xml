<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backgtound_round_up"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="@string/enter_payment_details"
                    android:textColor="@color/blakish"
                    android:textSize="@dimen/text_size_20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/lato_medium"
                    android:text="@string/rece_country"
                    android:textColor="@color/darkgrey"
                    android:textSize="@dimen/text_size_15sp" />

                <TextView
                    android:id="@+id/receiving_country"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_45dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/edittext_grey"
                    android:drawableEnd="@drawable/dropdown_arrow"
                    android:fontFamily="@font/lato_medium"
                    android:gravity="center_vertical"
                    android:hint="Republic of China"
                    android:padding="@dimen/margin_10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:fontFamily="@font/lato_medium"
                    android:text="@string/receiving_amount_m"
                    android:textColor="@color/darkgrey"
                    android:textSize="@dimen/text_size_15sp">

                </TextView>

                <EditText
                    android:id="@+id/receiving_amount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_45dp"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:background="@drawable/edittext_grey"
                    android:fontFamily="@font/montserrat_medium"
                    android:hint="@string/amount_hint"
                    android:inputType="numberDecimal"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:fontFamily="@font/lato_medium"
                    android:text="@string/charges_txt_m"
                    android:textColor="@color/darkgrey"
                    android:textSize="@dimen/text_size_15sp">

                </TextView>

                <TextView
                    android:id="@+id/charges"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_45dp"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:background="@drawable/edittext_grey"
                    android:enabled="false"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center_vertical"
                    android:hint="@string/amount_hint"
                    android:inputType="textPostalAddress"
                    android:padding="10dp"
                    android:text="50"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:fontFamily="@font/lato_medium"
                    android:text="@string/purpose_of_transfer_m"
                    android:textColor="@color/darkgrey"
                    android:textSize="@dimen/text_size_15sp" />

                <TextView
                    android:id="@+id/purpose_of_transfer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_45dp"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:background="@drawable/edittext_grey"
                    android:drawableEnd="@drawable/dropdown_arrow"
                    android:fontFamily="@font/lato_medium"
                    android:gravity="center_vertical"
                    android:hint="@string/select_the_purpose_txt"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14sp" />


                <TextView
                    android:id="@+id/other_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/lato_medium"
                    android:text="@string/others_txt_m"
                    android:textColor="@color/darkgrey"
                    android:textSize="@dimen/text_size_15sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/other_purpose_of_transfer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_45dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/edittext_grey"
                    android:fontFamily="@font/lato_medium"
                    android:gravity="center_vertical"
                    android:hint="@string/purpose_of_transfer"
                    android:padding="@dimen/margin_10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14sp"
                    android:visibility="gone" />


            </LinearLayout>


            <Button
                android:id="@+id/next_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/margin_20dp"
                android:background="@drawable/button_design"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_18sp" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>