<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgtound_round_up"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:text="@string/enter_bene_personal_details"
                android:textColor="@color/blakish"
                android:textSize="@dimen/text_size_20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/lato_medium"
                android:text="@string/beneficiary_name_account_title"
                android:textColor="@color/darkgrey"
                android:textSize="@dimen/text_size_15sp">

            </TextView>

            <EditText
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                android:textColor="@color/black"
                android:id="@+id/bene_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/edittext_grey"
                android:fontFamily="@font/lato_medium"
                android:hint="@string/jhon_smith"
                android:inputType="text"
                android:padding="@dimen/margin_10dp"
                android:textSize="@dimen/text_size_14sp">

            </EditText>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:fontFamily="@font/lato_medium"
                android:text="@string/address_txt"
                android:textColor="@color/darkgrey"
                android:textSize="@dimen/text_size_15sp">

            </TextView>

            <EditText
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                android:textColor="@color/black"
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:background="@drawable/edittext_grey"
                android:fontFamily="@font/lato_medium"
                android:hint="@string/address__hint"
                android:inputType="textPostalAddress"
                android:padding="10dp"
                android:textSize="@dimen/text_size_14sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:fontFamily="@font/lato_medium"
                android:text="@string/contact_no"
                android:textColor="@color/darkgrey"
                android:textSize="@dimen/text_size_15sp">

            </TextView>

            <EditText
                android:textColor="@color/black"
                android:id="@+id/contact_no"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:background="@drawable/edittext_grey"
                android:fontFamily="@font/lato_medium"
                android:hint="@string/phone_number_hint"
                android:inputType="number"
                android:padding="10dp"
                android:textSize="@dimen/text_size_14sp" />


        </LinearLayout>


        <Button
            android:id="@+id/next_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/margin_20dp"
            android:background="@drawable/button_design"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_18sp" />


    </LinearLayout>
</androidx.core.widget.NestedScrollView>
</layout>