<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_5dp"
        android:layout_marginEnd="@dimen/margin_5dp"
        android:background="@drawable/round_corners"
        android:elevation="0dp"
        app:cardCornerRadius="@dimen/corners_10dp"
        app:cardElevation="0dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_20dp">

            <TextView
                android:visibility="visible"
                android:textSize="@dimen/text_size_20sp"
                android:fontFamily="@font/lato_bold"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/cancel_tran"
                android:textColor="@color/colorPrimary" />


            <TextView
                android:visibility="gone"
                android:textSize="@dimen/text_size_20sp"
                android:fontFamily="@font/lato_semibold"
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_20dp"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/line_space_5dp"
                android:text="@string/cancel_transaction_text" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/message"
                android:layout_marginStart="@dimen/margin_5dp"
                android:layout_marginTop="@dimen/margin_20dp"
                android:layout_marginEnd="@dimen/margin_5dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/confirm_number"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="@dimen/text_size_14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:text="@string/confirm_text"
                    android:textColor="@color/colorWhite"/>


                <Button
                    android:id="@+id/not_number"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="@dimen/text_size_14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5dp"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_colour_border"
                    android:text="@string/cancel"
                    android:textColor="@color/black" />




            </LinearLayout>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</layout>