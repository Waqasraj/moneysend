<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:paddingBottom="@dimen/margin_20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backgtound_round_up"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="@string/beneficiary_details_txt"
                    android:textColor="@color/blakish"
                    android:textSize="@dimen/text_size_20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/lato_medium"
                    android:text="@string/bene_name"
                    android:textColor="@color/darkgrey"
                    android:textSize="@dimen/text_size_15sp">

                </TextView>

                <TextView

                    android:textColor="@color/black"
                    android:id="@+id/bene_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_50dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/edittext_grey"
                    android:fontFamily="@font/lato_medium"
                    android:padding="@dimen/margin_10dp"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_14sp">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/lato_medium"
                    android:text="@string/bank_name"
                    android:textColor="@color/darkgrey"
                    android:textSize="@dimen/text_size_15sp" />

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/bankname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_50dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/edittext_grey"
                    android:fontFamily="@font/lato_medium"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_10dp"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_14sp">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/lato_medium"
                    android:text="@string/branch_name"
                    android:textColor="@color/darkgrey"
                    android:textSize="@dimen/text_size_15sp">

                </TextView>

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/branch_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_50dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/edittext_grey"
                    android:fontFamily="@font/lato_medium"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_10dp"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_14sp">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/lato_medium"
                    android:text="@string/acount_number_m"
                    android:textColor="@color/darkgrey"
                    android:textSize="@dimen/text_size_15sp">

                </TextView>

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/account_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_50dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/edittext_grey"
                    android:fontFamily="@font/lato_medium"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_10dp"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_14sp">

                </TextView>


            </LinearLayout>


            <Button
                android:visibility="gone"
                android:id="@+id/next_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/margin_20dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginEnd="@dimen/margin_20dp"
                android:background="@drawable/button_design"
                android:text="@string/update_beneficary"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_18sp" />

            <Button
                android:id="@+id/delete_beneficiary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/margin_20dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginEnd="@dimen/margin_20dp"
                android:background="@drawable/button_design"
                android:text="@string/delete_beneficary"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_18sp" />

            <Button
                android:visibility="gone"
                android:id="@+id/transfer_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/margin_20dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginEnd="@dimen/margin_20dp"
                android:background="@drawable/button_design"
                android:text="@string/bank_transfer"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_18sp" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>