<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:requiresFadingEdge="none">

            <RelativeLayout
                android:id="@+id/main_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/toolbar"
                android:paddingStart="@dimen/margin_25dp"
                android:paddingEnd="@dimen/margin_25dp">

                <TextView
                    android:id="@+id/ask_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:fontFamily="@font/lato_semibold"
                    android:gravity="start"
                    android:lineSpacingExtra="@dimen/line_space_5dp"
                    android:text="@string/enter_your_amount"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20sp" />

                <LinearLayout
                    android:id="@+id/amount_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_50dp"
                    android:layout_below="@id/ask_number"
                    android:layout_marginTop="@dimen/margin_15dp"
                    android:background="@drawable/edittext_grey"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <EditText
                        android:id="@+id/sending_amount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".9"
                        android:autofillHints="@string/amount_hint"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/lato_bold"
                        android:gravity="center_vertical"
                        android:hint="@string/amount_hint"
                        android:inputType="numberDecimal"
                        android:paddingStart="@dimen/margin_20dp"
                        android:paddingEnd="@dimen/margin_5dp"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="@dimen/text_size_20sp" />


                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/quick_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/amount_layout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:fontFamily="@font/lato_semibold"
                    android:text="@string/or_pick_qucik_amount"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_16sp" />

                <LinearLayout
                    android:id="@+id/quick_amount_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/quick_amount"
                    android:layout_marginTop="@dimen/margin_15dp"
                    android:orientation="horizontal"
                    android:weightSum="5">


                    <TextView
                        android:id="@+id/amount_100"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:layout_marginEnd="@dimen/margin_5dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle_blue_sky_quick_amount"
                        android:fontFamily="@font/lato_semibold"
                        android:gravity="center"
                        android:text="@string/one_hundred"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_12sp" />

                    <TextView
                        android:id="@+id/amount_200"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:layout_marginEnd="@dimen/margin_5dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle_blue_sky_quick_amount"
                        android:fontFamily="@font/lato_semibold"
                        android:gravity="center"
                        android:text="@string/two_hundred"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_12sp" />

                    <TextView
                        android:id="@+id/amount_300"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:layout_marginEnd="@dimen/margin_5dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle_blue_sky_quick_amount"
                        android:fontFamily="@font/lato_semibold"
                        android:gravity="center"
                        android:text="@string/three_hundred"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_12sp" />

                    <TextView
                        android:id="@+id/amount_400"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:layout_marginEnd="@dimen/margin_5dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle_blue_sky_quick_amount"
                        android:fontFamily="@font/lato_semibold"
                        android:gravity="center"
                        android:text="@string/four_hundred"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_12sp" />

                    <TextView
                        android:id="@+id/amount_500"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:layout_marginEnd="@dimen/margin_5dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle_blue_sky_quick_amount"
                        android:fontFamily="@font/lato_semibold"
                        android:gravity="center"
                        android:text="@string/five_hundred"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_12sp" />

                </LinearLayout>


                <Button
                    android:id="@+id/generate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/margin_20dp"
                    android:background="@drawable/background_button"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center"
                    android:text="@string/load_card"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_18sp"
                    android:visibility="visible" />

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>
</layout>
